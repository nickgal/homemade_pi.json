{
  "$jason": {
    "head": {
      "title": "{{$params.name}}",
      "description": "Switch details view",
      "actions": {
        "update": {
          "type": "$network.request",
          "options": {
            "url": "http://192.168.101.106:4000/api/switches/{{$params.id}}",
            "method": "PUT",
            "data": {
              "switch": {
                "name": "{{$get.name}}"
              }
            }
          }
        }
      }
    },
    "body": {
      "style": {
        "background": "#1d1f21",
        "color": "#c5c8c6",
        "border": "none"
      },
      "header": {
        "title": {
          "type": "label",
          "text": "switch {{$params.id}}"
        },
        "style": {
          "background": "#1d1f21",
          "font": "AvenirNext-Heavy",
          "shy": "true",
          "size": "14",
          "color": "#ffffff"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "label",
              "text": "name",
              "style": {
                "font": "HelveticaNeue-CondensedBold",
                "size": "14",
                "color": "#969896"
              }
            },
            {
              "type": "textfield",
              "name": "name",
              "value": "{{$params.name}}",
              "style": {
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "rf_code_on",
              "style": {
                "font": "HelveticaNeue-CondensedBold",
                "size": "14",
                "color": "#969896"
              }
            },
            {
              "type": "textfield",
              "name": "rf_code_on",
              "value": "{{$params.rf_code_on}}",
              "style": {
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "rf_code_off",
              "style": {
                "font": "HelveticaNeue-CondensedBold",
                "size": "14",
                "color": "#969896"
              }
            },
            {
              "type": "textfield",
              "name": "rf_code_off",
              "value": "{{$params.rf_code_off}}",
              "style": {
                "color": "#ffffff"
              }
            },
            {
              "type": "button",
              "text": "save",
              "style": {
                "height": "50",
                "background": "#b5bd68"
              },
              "action": {
                "trigger": "update"
              }
            }
          ]
        }
      ]
    }
  }
}
